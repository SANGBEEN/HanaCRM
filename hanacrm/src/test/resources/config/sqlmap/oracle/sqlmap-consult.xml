<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
    
<mapper namespace="consult.ConsultDAO">

<!-- resultMap 설정 시작 -->
	<resultMap type="consult" id="consultMap">
		<result column="customer_no" property="customerNo"/>
		<result column="employee_no" property="employeeNo"/>
		<result column="reg_date" property="regDate"/>
	</resultMap>
	
	<resultMap type="consultProduct" id="consultProductMap">
		<result column="consult_no" property="consultNo"/>
		<result column="product_no" property="productNo"/>
		<result column="reg_date" property="regDate"/>
	</resultMap>
<!-- resultMap 설정 끝 -->

<!-- 쿼리 -->
	<!-- 상담 내역 받아오기 -->
	<select id="selectListByEmployeeNo" parameterType="int" resultMap="consultMap">
		select no, customer_no, employee_no, content, to_char(reg_date, 'yyyy-mm-dd') as reg_date, title from consult where employee_no=#{employeeNo}
	</select>
	
	<!-- 상담 내역의 상품 받아오기 -->
	<select id="selectProductList" parameterType="int" resultMap="consultProductMap">
		select * from consult_product where consult_no=#{consultNo}
	</select>
	
	<!-- <select id="selectCustomer" parameterType="int" resultMap="customerMap">
		select * from customer where no=#{customerNo}
	</select> -->
	
	<!-- 상담 내역의 상세 정보 받아오기 -->
	<select id="selectByNo" parameterType="int" resultMap="consultMap">
		select * from consult where no=#{consultNo}
	</select>
	
	<select id="select" parameterType="int" resultMap="consultMap">
		select * from consult where customer_no=#{no}
	</select>
	
	<!-- 추가할 상담 내역 번호 받아오기 -->
	<select id="selectSeq" resultType="int">
		select consult_seq.nextval from dual
	</select>
	
	<!-- 상담 내역 추가하기 -->
	<insert id="insert" parameterType="consult">
		insert into consult(no, customer_no, employee_no, content, reg_date, title) 
		values(#{no}, #{customerNo}, #{employeeNo}, #{content}, to_date(#{regDate},'YYYY-MM-DD hh24:mi'), #{title})
	</insert>
	
	<insert id="insertProduct" parameterType="consultProduct">
		insert into consult_product(no, consult_no, type, product_no) 
		values(consult_product_seq.nextval, #{consultNo}, #{type}, #{productNo})
	</insert>
	
	<update id="update" parameterType="consult">
		update into consult set content=#{content}, title=#{title} where no=#{no}
	</update>
	
	<update id="updateProduct" parameterType="consultProduct">
		update into consult_product set type=#{type}, product_no=#{productNo} where consult_no=#{consultNo}
	</update>
	
	<delete id="delete" parameterType="int">
		delete from consult where no=#{consultNo}
	</delete>
		
</mapper>
