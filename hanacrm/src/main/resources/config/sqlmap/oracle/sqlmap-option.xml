<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
<mapper namespace="option.OptionDAO">

<!-- resultMap 설정 시작 -->
	<resultMap type="option" id="optionMap">
		<result column="intr_rate_type" property="intrRateType"/>
		<result column="intr_rate_type_nm" property="intrRateTypeNm"/>
		<result column="save_trm" property="saveTrm"/>
		<result column="intr_rate" property="intrRate"/>
		<result column="intr_rate2" property="intrRate2"/>
		<result column="rsrv_type" property="rsrvType"/>
		<result column="rsrv_type_nm" property="rsrvTypeNm"/>
	</resultMap>
<!-- resultMap 설정 끝 -->

<!-- 쿼리 -->
	<select id="selectDepositOption" parameterType="int">
		select intr_rate_type, intr_rate_type_nm, save_trm, intr_rate, intr_rate2 from deposit_options where fin_prdt_cd = #{finPrdtCd}
	</select>
	
	<select id="selectSavingsOption" parameterType="int">
		select intr_rate_type, intr_rate_type_nm, save_trm, intr_rate, intr_rate2, rsrv_type, rsrv_type_nm from savings_options where fin_prdt_cd = #{finPrdtCd}
	</select>
	
	<insert id="insertDepositOption" parameterType="option">
		insert into deposit_options values(
			deposit_options_seq.nextval, to_date(#{dclsMonth},'YYYY/MM'),#{finCoNo},#{finPrdtCd,jdbcType=VARCHAR},#{intrRateType},#{intrRateTypeNm},
			#{saveTrm},#{intrRate},#{intrRate2}
		)
	</insert>
	
	<insert id="insertSavingsOption" parameterType="option">
		insert into savings_options values(
			savings_options_seq.nextval, to_date(#{dclsMonth},'YYYY/MM'),#{finCoNo},#{finPrdtCd,jdbcType=VARCHAR},
			#{intrRateType},#{intrRateTypeNm},#{saveTrm},#{intrRate},#{intrRate2},#{rsrvType},#{rsrvTypeNm}
		)
	</insert>
	
</mapper>